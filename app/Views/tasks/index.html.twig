{% extends "layouts/layout.html.twig" %}

{% block content %}
    <div class="p-24">
        <div class="flex justify-between mb-6">
            <h1 class="text-3xl font-bold text-gray-700">Tasks</h1>
            <button class="bg-blue-500 text-white px-6 py-3 rounded-md hover:cursor-pointer hover:bg-blue-600 duration-500">Create</button>
        </div>
        <div class="bg-white shadow-lg rounded-2xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="table-auto w-full text-sm text-left text-gray-600">
                    <thead class="bg-gray-100 text-xs uppercase tracking-wider text-gray-700">
                    <tr>
                        <th class="px-4 py-3">ID</th>
                        <th class="px-4 py-3">Title</th>
                        <th class="px-4 py-3">Priority</th>
                        <th class="px-4 py-3">Status</th>
                        <th class="px-4 py-3">Progress</th>
                        <th class="px-4 py-3">Created</th>
                        <th class="px-4 py-3">Completed</th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                    {% for task in tasks %}
                        <tr class="hover:bg-gray-50 transition hover:cursor-pointer" onclick="window.location.href = 'tasks/{{ task.id }}'">
                            <td class="px-4 py-3 font-medium text-gray-900">
                                {{ task.id }}
                            </td>

                            <td class="px-4 py-3 font-semibold">
                                {{ task.title }}
                            </td>

                            <td class="px-4 py-3">
                                {% if task.priority == 'high' %}
                                    <span class="px-2 py-1 text-xs font-semibold bg-red-100 text-red-600 rounded-full">
                                        High
                                    </span>
                                {% elseif task.priority == 'medium' %}
                                    <span class="px-2 py-1 text-xs font-semibold bg-yellow-100 text-yellow-600 rounded-full">
                                        Medium
                                    </span>
                                {% else %}
                                    <span class="px-2 py-1 text-xs font-semibold bg-green-100 text-green-600 rounded-full">
                                        Low
                                    </span>
                                {% endif %}
                            </td>

                            <td class="px-4 py-3">
                                <span class="px-2 py-1 text-xs font-semibold bg-blue-100 text-blue-600 rounded-full">
                                    {{ task.status }}
                                </span>
                            </td>

                            <td class="px-4 py-3 w-48">
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div
                                            class="bg-blue-500 h-2 rounded-full"
                                            style="width: {{ task.progress }}%">
                                    </div>
                                </div>
                                <span class="text-xs text-gray-500">
                                    {{ task.progress }}%
                                </span>
                            </td>

                            <td class="px-4 py-3">
                                {{ task.created_at|date('d/m/y') }}
                            </td>

                            <td class="px-4 py-3">
                                {{ task.completed_at ?: '-' }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-6 text-gray-500">
                                No tasks found.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}